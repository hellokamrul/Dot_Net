
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/bundles/modernizr")
<link href="~/Content/css/registration.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row centered-form">
            <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please sign up</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="/Registration/Registration/" method="post">
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="text" name="first_name" id="first_name" value="@(Model == null? "" : Model.first_name)" class="form-control input-sm" placeholder="First Name">
                                        @Html.ValidationMessage("first_name")
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="text" name="last_name" id="last_name" value="@(Model == null? "" : Model.last_name)" class="form-control input-sm" placeholder="Last Name">
                                        @Html.ValidationMessage("last_name")
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="email" name="email" id="email" value="@(Model == null? "" : Model.email)" class="form-control input-sm" placeholder="Email Address">
                                @Html.ValidationMessage("email")
                            </div>

                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="password" name="password" id="password" data-toggle="password" value="@(Model == null? "" : Model.password)" class="form-control input-sm" placeholder="Password">
                                        @Html.ValidationMessage("password")
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="password" name="password_confirmation" id="password_confirmation" data-toggle="password" value="@(Model == null? "" : Model.password_confirmation)" class="form-control input-sm" placeholder="Confirm Password">
                                        @Html.ValidationMessage("password_confirmation")
                                    </div>
                                </div>
                            </div>

                            <input type="submit" value="Register" class="btn btn-info btn-block">

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
